extends layout

block content
  h1= title
  p Welcome to #{title}
  p Query Parameters:
  ul
    li Rows: #{query.rows}
    li Columns: #{query.cols}
  - let rows= Number(query.rows)
  - let cols= Number(query.cols)

  - if(!(Number.isInteger(rows)) || !(Number.isInteger(cols))) {
    p Passed arguments are not integers
  - }
  - else if(!(rows >= 1 && rows <= 10)) {
    p Range of rows must be in 1 to 10
  - } 
  - else if(!(cols >= 1 && cols <= 10)) {
    p Range of cols must be in 1 to 10
  - }
  - else {
    br
    h5 Board table
    table#outer 
        - for(let i = 0; i < rows; i++) {
            tr#middle 
                - for(let j = 0; j < cols; j++) {
                    -if(i==j){
                        td(style="background-color: yellow;padding: 10px;")= (1) 
                        -}                 
                    - else if(i==j-1){
                        td(style="background-color: green;padding: 10px;")= (i)
                        -}
                    - else if(i==j+1){
                        td(style="background-color: blue;padding: 10px;")= (2)
                        -}
                    -else {
                        td(style="padding: 10px;")= (0)
                        -}
                - }
        - }
  - }